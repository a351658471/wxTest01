/* components/leftTab/leftTab.wxss */
.leftTab{
  display: flex;
  width: 90%;
  margin: 1rem auto;
  
}
.tabItem{
  margin-right: 1rem
}
.active{
  font-weight: bolder;
  position: relative
}
.active::after{
  content: '';
  width: 50%;
  height:3px;
  position: absolute;
  bottom: -0.5rem;
  left: 25%;
  background: red;
  border-radius: 30%
}