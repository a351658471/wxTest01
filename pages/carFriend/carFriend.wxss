/* pages/carFriend/carFriend.wxss */
.post{
  width:90%;
  margin:1rem auto;
  border-top: 1px solid #FBF8F9
}
.head{
  margin-top: 0.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.headLeft{
  display: flex;
  width: 40%;
  justify-content: space-between;
  align-items: center;
  font-size: 0.8rem
}
.tx{
  
  height:3rem;
  width:3rem;
  
}
.tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%
}
.author{
  text-align: right;
  width: 3.5rem;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap
}
.isFocus{
  width: 3.5rem;
  height: 1.2rem;
  line-height: 1.2rem;
  text-align: center;
  border: 1px solid #D3D1D2;
  border-radius: 10px;
  background: #F9F9F9;
  font-size: 0.8rem
}
.contentTitle{
  display: flex;
  margin: 1rem 0

}
.searchKey{
  font-size: 0.8rem;
  color: #1C73DE;
  width:20%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap

}
.describe{
  font-size: 0.8rem;
   width:80%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap
}
.contentImg{
  width: 100%;
  height:5rem;
  display: flex;
  justify-content: space-between
}
.imgItem{
  width: 30%;
  height:80%;

}

.bottom{
  
  height: 2rem;
  line-height: 2rem;
  display: flex;
  justify-content : space-between;
  font-size: 10px;
  color: #999;
  margin-left: 0.5rem;
  border-bottom: 1px solid #FBF8F9
}
.bottomRight{
  font-size: 10px;
  width: 7rem;
  display: flex;
  justify-content : space-around
}
.bottomRightItem{
  display: flex;
}
.mtext{
  margin-left: 3px;
}

