/* pages/home/home.wxss */
page{
  background:	#F5F5F5;
  height:100%
}
.carDetail{
  padding: 1rem 0;
  margin-top: 1rem;
  width:100%;
  height:4em;
  background-color: #fff;
}
.detail-heard{
  width: 90%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between
}
.detail-body{
  width: 90%;
  margin: 1rem auto 0 auto;
  display: flex;
  justify-content: space-between
}
.body-left{
  display: flex;
  justify-content: space-between
}
.left-item{
  font-size: 12px;
  border: 1px solid #D0435A;
  border-radius: 5px;
  padding: 3px 10px;
  color: #D0435A;
  margin-right: 0.5rem
}
.myTabCtrl{
  position: relative;
  padding-top:1.5rem;
  margin: 1rem auto 0 auto;
  width: 90%;
  display: flex;
  justify-content: space-between
}
.detail{
  height:15rem;
  background: #fff;
}
.active{
  position: relative;
}
.active::after{
  position:absolute;
  content:'';
  width:30px;
  height:4px;
  background:red;
  bottom:-0.5rem;
  left:1rem;
  border-radius:25%;
}
